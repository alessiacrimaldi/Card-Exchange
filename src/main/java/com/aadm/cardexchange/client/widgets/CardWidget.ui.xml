<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .card {
            width: 18rem;
            height: 350px;
            border-radius: 10px;
            background-color: #e8e8e8;
            box-shadow: 2px 2px 5px #a8a8a8;
            position: relative;
            padding-inline: 1em;
            padding-block: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
        }
        .card img {
            width: 100%;
            max-height: auto;
        }
        .name {
            color: #222;
            position: absolute;
            font-size: 18px;
            text-align: center;
            top: 15px;
        }
        .details {
            font-size: 13px;
            color: #222;
            text-align: right;
        }
        .button {
            background-color: #555;
            color: white;
            border: none;
            cursor: pointer;
            height: 25px;
            line-height: 25px;
            align-self: center;
            text-align: center;
            border-radius: 10px;
            width: 60%;
        }
        .firstRow {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 85%;
            margin-top: 40px;
        }
        .properties {
            display: grid;
            flex-wrap: wrap;
            flex-direction: row;
            width: 85%;
            line-height: 16px;
            height: 48px;
            align-content: space-between;
            font-size: 13px;
            color: #444;
            grid-template-columns: 1fr 1fr;
            column-gap: 1em;
            align-items: flex-start;
            text-align: center;
        }
        .detailsCol {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .height {
            height:125px
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.card}">
            <div class="{style.name}" ui:field="nameDiv">placeholder</div>
            <div class="{style.firstRow}">
                <g:Image ui:field="image"/>
                <div class="{style.height}" />
                <div class="{style.detailsCol}">
                    <div class="{style.details}" ui:field="typeDiv">placeholder</div>
                    <div class="{style.details}" ui:field="detailsDiv">placeholder</div>
                </div>
            </div>
            <div class="{style.properties}" ui:field="propertiesDiv">placeholder</div>
            <g:PushButton styleName="{style.button}" ui:field="detailsButton">Open Details</g:PushButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>