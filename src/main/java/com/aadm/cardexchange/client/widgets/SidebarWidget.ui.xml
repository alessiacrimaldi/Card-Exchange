<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .sidebar {
            width: 25%;
            height: 100vh;
            position: sticky;
            top: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background: #ccc;
        }

        .sidebar div {
            background: #eee;
            margin: 1rem;
            padding: 1rem;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.sidebar}" ui:field="links"/>
</ui:UiBinder>