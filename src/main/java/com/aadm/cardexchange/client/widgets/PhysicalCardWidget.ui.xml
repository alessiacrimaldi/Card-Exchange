<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .card {
            height: 30vh;
            max-height: 250px;
            position: relative;
            display: flex;
            flex: 0 1 15rem;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 1rem;
            background: #62B6B7;
            border-radius: 10px;
            padding: 20px;
        }
        .deleteButton {
            position: absolute;
            top: 5px;
            right: 5px;
            color: white;
            padding: 5px;
            background: #439A97;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.card}" ui:field="cardContainer">
        <h2 ui:field="titleDiv" />
        <div ui:field="statusDiv" />
        <div ui:field="descriptionDiv" />
        <g:Button title="Rimuovi carta dal mazzo" styleName="{style.deleteButton}" ui:field="deleteButton">X</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>