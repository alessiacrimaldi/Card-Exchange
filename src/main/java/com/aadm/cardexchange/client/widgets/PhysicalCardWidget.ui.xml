<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type='com.aadm.cardexchange.client.widgets.PhysicalCardWidget.PhysicalCardStyle'>
        .cardSelected {
            box-shadow: 0 0 0 4px yellow inset;
        }

        .cardDiscarded {
            border: none;
        }

        .card {
            position: relative;
            display: flex;
            flex-basis: 10rem;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 1rem;
            background: green;
            border-radius: 10px;
        }

        .deleteButton {
            position: absolute;
            top: 5px;
            right: 5px;
            color: red;
            padding: 5px;
            background: #eee;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.card}" ui:field="cardContainer">
        <h3>Titolo</h3>
        <div>Stato</div>
        <div>Descrizione</div>
        <g:Button title="Rimuovi carta dal mazzo" styleName="{style.deleteButton}" ui:field="deleteButton">X</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>