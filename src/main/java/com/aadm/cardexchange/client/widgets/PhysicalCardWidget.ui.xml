<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type='com.aadm.cardexchange.client.widgets.PhysicalCardWidget.PhysicalCardStyle'>
        .cardSelected {
            box-shadow: 0 0 0 4px gold inset !important;
        }

        .cardDiscarded {
            border: none;
        }

        .card {
            position: relative;
            display: flex;
            gap: .5em;
            flex-basis: 10rem;
            min-width: 10rem;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: #fff;
            border-radius: 1rem;
            color: rgb(34, 34, 34);
            box-shadow: rgba(0, 0, 0, 0.4) 0 2px 4px, rgba(0, 0, 0, 0.3) 0 7px 13px -3px, rgba(0, 0, 0, 0.2) 0 -3px 0 inset;
        }

        .cardStatus {
            color: rgb(68, 68, 68);
            padding: 1rem 0;
            font-size: 0.9em;
            font-weight: bold;
            text-transform: uppercase;
        }

        .cardDescription {
            word-break: break-word;
        }

        .deleteButton {
            position: absolute;
            top: 5px;
            right: 5px;
            width: 1.5rem;
            height: 1.5rem;
            color: red;
            background: #fff;
            border: solid 1px red;
            border-radius: 50%;
            text-align: center;
        }

        .deleteButton:hover {
            color: white;
            background: red;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.card}" ui:field="cardContainer">
        <h2 ui:field="cardName"/>
        <div ui:field="cardDescription" class="{style.cardDescription}"/>
        <div ui:field="cardStatus" class="{style.cardStatus}"/>
    </g:HTMLPanel>
</ui:UiBinder>