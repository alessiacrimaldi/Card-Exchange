<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .userList > h2 {
            text-align: center;
        }

        .userList > table {
            border-radius: 5px;
            box-shadow: 2px 2px 5px #aaa;
            text-align: left;
            border-spacing: 0;
        }

        .userList th, td {
            padding: 0.2rem 1.5rem;
        }

        .userList thead {
            background-color: #ccc;
        }

        /*noinspection ALL*/
        .userList tbody > tr:nth-child\(odd\) {
            background-color: #eee;
        }

        .userList thead th:first-child {
            border-top-left-radius: 5px;
        }

        .userList thead th:last-child {
            border-top-right-radius: 5px;
        }

        .userList tbody > tr:last-child > td:first-child {
            border-bottom-left-radius: 5px;
        }

        .userList tbody > tr:last-child > td:last-child {
            border-bottom-right-radius: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.userList}">
            <h2 ui:field="tableHeading"/>
            <table>
                <thead>
                    <tr><th colspan="2">User</th><th>State</th></tr>
                </thead>
                <tbody ui:field="tableBody">
                </tbody>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>