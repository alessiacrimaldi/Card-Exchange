<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .wrapper {
            padding: 1.5rem 3rem;
            width: 100%;
            height: 100%;
            display: flex;
            flex: 1;
            flex-direction: column;
            gap: 1.5rem;
        }

        .headerGrid {
            display: grid;
            grid-template-columns: 1fr 5fr;
            border-radius: 5px;
            box-shadow: 2px 2px 5px #aaa;
            padding: 0.5rem 1.5rem 1.5rem 1rem;
            grid-row-gap: 0.5rem;
            grid-column-gap: 2rem;
        }

        .game {
            color: #9C9C9C;
        }

        img {
            width: 100%;
            height: 100%;
        }

        .cardInformation {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .cardOptions {
            display: flex;
            flex-direction: row;
            gap: 3.5rem;
        }

        .cardOption {
            justify-self: end;
            font-weight: bold;
            text-transform: uppercase;
        }

        .deckSection {
            align-self: center;
            display: flex;
            gap: 1rem;
        }

        .deckButton {
            border-radius: 0.7rem;
            padding: 0.2rem 0.5rem;
        }

        .usersLists {
            display: flex;
            justify-content: space-around;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.wrapper}">
        <div class="{style.headerGrid}">
            <p class="{style.game}">Game: <span ui:field="cardGame"/></p>
            <h1 ui:field="cardName"/>
            <g:Image ui:field="cardImage"/>
            <div class="{style.cardInformation}">
                <div ui:field="cardDescription"/>
                <div class="{style.cardOptions}">
                    <!--all cards-->
                    <div>Type:<div class="{style.cardOption}" ui:field="cardOptionType"/></div>
                    <!--Magic and Pokemon cards-->
                    <div ui:field="optionArtist">Artist:<div class="{style.cardOption}" ui:field="cardOptionArtist"/></div>
                    <div ui:field="optionRarity">Rarity:<div class="{style.cardOption}" ui:field="cardOptionRarity"/></div>
                    <!--YuGiOh cards-->
                    <div ui:field="optionRace">Race:<div class="{style.cardOption}" ui:field="cardOptionRace"/></div>

                    <div ui:field="optionOtherProperties">Other properties:
                        <!--Magic cards-->
                        <div class="{style.cardOption}" ui:field="cardOptionFoil">foil</div>
                        <div class="{style.cardOption}" ui:field="cardOptionAlternative">alternative</div>
                        <div class="{style.cardOption}" ui:field="cardOptionFullArt">full art</div>
                        <div class="{style.cardOption}" ui:field="cardOptionReprint">reprint</div>
                        <!--Pokemon cards-->
                        <div class="{style.cardOption}" ui:field="cardOptionFirstEd">first edition</div>
                        <div class="{style.cardOption}" ui:field="cardOptionHolo">holo</div>
                        <div class="{style.cardOption}" ui:field="cardOptionNormal">normal</div>
                        <div class="{style.cardOption}" ui:field="cardOptionReverse">reverse</div>
                        <!--Magic and Pokemon cards-->
                        <div class="{style.cardOption}" ui:field="cardOptionPromo">promo</div>
                    </div>

                </div>
            </div>
        </div>
        <div class="{style.deckSection}" ui:field="addToDeckSection">
            <select name="deck">
                <option value="">-- select a deck --</option>
                <option value="owned">Owned</option>
                <option value="desired">Desired</option>
                <option value="custom">Custom 1</option>
            </select>
            <g:PushButton addStyleNames="{style.deckButton}" ui:field="addToDeckButton">Add to deck</g:PushButton>
        </div>
        <g:HTMLPanel styleName="{style.usersLists}" ui:field="userLists"/>
    </g:HTMLPanel>
</ui:UiBinder>