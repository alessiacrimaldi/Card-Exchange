<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .wrapper {
            padding: 1.5rem 3rem;
            width: 100%;
            height: 100%;
            display: flex;
            flex: 1;
            flex-direction: column;
            gap: 1.5rem;
        }

        .headerGrid {
            display: grid;
            grid-template-columns: 1fr 5fr;
            border-radius: 5px;
            box-shadow: 2px 2px 5px #aaa;
            padding: 0.5rem 1.5rem 1.5rem 1rem;
            grid-row-gap: 0.5rem;
            grid-column-gap: 2rem;
        }

        .game {
            color: #9C9C9C;
        }

        img {
            width: 100%;
            height: 100%;
        }

        .cardInformation {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .cardOptions {
            display: flex;
            flex-direction: row;
            gap: 5rem;
        }

        .cardType, .cardRace {
            font-weight: bold;
            text-transform: uppercase;
        }

        .deckSection {
            align-self: center;
            display: flex;
            gap: 1rem;
        }

        .deckButton {
            border-radius: 0.7rem;
            padding: 0.2rem 0.5rem;
        }

        .usersLists {
            display: flex;
            justify-content: space-around;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.wrapper}">
        <div class="{style.headerGrid}">
            <div class="{style.game}">
                <p>Game: YuGiOh</p>
            </div>
            <div>
                <h1>Gryphon Wing</h1>
            </div>
            <div>
                <img src="https://images.ygoprodeck.com/images/cards/55608151.jpg"/>
            </div>
            <div class="{style.cardInformation}">
                <div>When your opponent activates "Harpie's Feather Duster": Negate its effect, and if you do, destroy all Spell and Trap Cards your opponent controls.</div>
                <div class="{style.cardOptions}">
                    <div>Type:<div class="{style.cardType}">Trap Card</div></div>
                    <div>Race:<div class="{style.cardRace}">Normal</div></div>
                </div>
            </div>
        </div>
        <div class="{style.deckSection}">
            <select name="deck">
                <option value="">-- select a deck --</option>
                <option value="owned">Owned</option>
                <option value="desired">Desired</option>
                <option value="custom">Custom 1</option>
            </select>
            <g:PushButton addStyleNames="{style.deckButton}" ui:field="addToDeckButton">Add to deck</g:PushButton>
        </div>
        <g:HTMLPanel styleName="{style.usersLists}" ui:field="userLists"/>
    </g:HTMLPanel>
</ui:UiBinder>