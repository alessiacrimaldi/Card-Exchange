<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .extern {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 100%;
            height: 90vh;
        }

        .extern > h1, h3 {
            width: 100%;
            text-align: center;
        }

        .buttons {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 20%;
            margin-top: 50px;
            align-self: center;
        }

        .buttons Button {
            font-size: 14px;
            font-weight: bold;
            border: 2px solid white;
            border-radius: .7em;
            width: 100px;
            height: 40px;
            color: white;
        }

        .green {
            background-color: darkgreen;
        }

        .green:hover {
            background-color: forestgreen;
            color: black;;
            border: 3px solid black;
            cursor: pointer;
        }

        .green:disabled {
            background-color: gainsboro;
        }

        .red {
            background-color: firebrick;
        }

        .red:hover {
            background-color: #e50000;
            color: black;;
            border: 3px solid black;
            cursor: pointer;
        }

    </ui:style>
    <g:HTMLPanel styleName="{style.extern}">
        <h1 ui:field="pageTitle"/>
        <h3 ui:field="pageSubtitle"/>
        <g:HTMLPanel ui:field="exchangeDecks" />
        <div class="{style.buttons}">
            <g:Button ui:field="cancelButton" styleName="{style.red}">&#10006;</g:Button>
            <g:Button ui:field="acceptButton" styleName="{style.green}">&#10004;</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>