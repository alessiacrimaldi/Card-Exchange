<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aadm.cardexchange.client.widgets">
    <ui:style>
        .extern {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100vh;
        }

        .extern h1 {
            width: 100%;
            text-align: center;
        }

        .ow-deck-container {
            margin-top: 50px
        }

        .deckTitle {
            width: 100%;
            background: #942e94;
            color: #fff;
            margin: 0;
            padding-top: 10px;
            padding-left: 10px;
        }

    </ui:style>
    <g:HTMLPanel styleName="{style.extern}">
        <h1>New Exchange Page</h1>
        <div class="{style.ow-deck-container}">
            <h2 class="{style.deckTitle}">Your Owned Cards</h2>
            <m:DeckWidget ui:field="senderDeck" />
        </div>
        <div class="{style.ow-deck-container}">
            <h2 class="{style.deckTitle}" ui:field="receiverEmail" />
            <m:DeckWidget ui:field="receiverDeck" />
        </div>

        <div ui:field="selectedCard" />
    </g:HTMLPanel>
</ui:UiBinder>